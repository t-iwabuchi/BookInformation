<h1>閲覧</h1>

<form action="/reputation/insert" method="GET" name="reputation" class="form-horizontal">
<br />
<div class="form-group">
	<label class="col-sm-2 control-label">ISBN番号:</label>
	<div class="col-sm-10">
    	<input type="text" class="form-control" name="isbn" value="<%= @ISBN %>">
	</div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">書名:</label>
	<div class="col-sm-10">
    	<input type="text" class="form-control" name="title" value="<%= @title %>">
	</div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">著者:</label>
	<div class="col-sm-10">
    	<input type="text" class="form-control" name="author" value="<%= @author %>">
	</div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">出版社:</label>
	<div class="col-sm-10">
    	<input type="text" class="form-control" name="publisher" value="<%= @publisher %>">
	</div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">出版年月日:</label>
	<div class="col-sm-10 form-inline">
    	<input type="text" class="form-control" name="publication_year" value="<%= @publication_year %>">年
    	<input type="text" class="form-control" name="publication_month" value="<%= @publication_month %>">月
    	<input type="text" class="form-control" name="publication_dates" value="<%= @publication_dates %>">日
	</div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">閲覧数:</label>
	<div class="col-sm-10">
    	<input type="text" class="form-control" name="views" value="<%= @views %>">
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">内部登録番号:</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" name="id" value="<%= @ID %>">
	</div>
</div>

<hr size=100>

<!--評価の書き込み-->
<div class="form-group">
<label class="col-sm-2 control-label" for="InputTextarea">評価記入欄</label>
	<div class="col-sm-10">
  		<textarea name="reputation" class="form-control" cols=40 rows=4 placeholder="ここにこの本の評価を入力してください"></textarea>
	</div>
<label class="col-sm-2 control-label">5段階評価：</label>
		<div class="col-sm-10">
			<select class="form-control" name="stars">
			<option value=0>選択してください</option>
			<option value=1>最悪</option>
			<option value=2>微妙</option>
			<option value=3>普通</option>
			<option value=4>そこそこ</option>
			<option value=5>最高に良い</option>
			</select>
		</div>

<div class="form-group">
	<div class="btn-group center-block">
		<input type="submit" class="btn btn-default" value="評価を投稿">
		<input type="reset" class="btn btn-default" value="リセット">
	</div>
</div>
</div>
</p>
</form>

<!--評価の表示-->
<table class="table table-striped">
	<thead>
		<tr>
  			<th>書名</th>
  			<th>5段階評価</th>
  			<th>評価</th>
		</tr>
	</thead>
	<tbody>
<% @reputation.each do |row| %>
	<% if row[2]==0
		row2text = "未評価"
	elsif row[2]==1 then
		row2text = "最悪"
	elsif row[2]==2 then
		row2text = "微妙"
	elsif row[2]==3 then
		row2text = "普通"
	elsif row[2]==4 then
		row2text = "そこそこ"
	elsif row[2]==5 then
		row2text = "最高に良い"
	end
	%>
	  	<tr>
    		<td><%= @title %></td>
    		<td><%= row2text %></td>
    		<td><%= row[3] %></td>
  		</tr>
<% end %>
	</tbody>
</table>

<nav class="navbar navbar-default navbar-fixed-bottom">
<form class="form-horizontal">
	<div class="form-group">
		<div class="btn-group btn-group-justified">
    		<input type="button" class="btn btn-default btn-block btn btn-success" value="戻る" onClick='history.back();'>
		</div>
	</div>
</form>
</nav>