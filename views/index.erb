<h1>Index Page</h1>
<br />
<h2>閲覧数ランキング</h2>
<table class="table table-striped">
<thead>
    <tr>
		<th>書名</th>
		<th>内部登録番号</th>
		<th>ISBN</th>
		<th>書名</th>
		<th>著者</th>
		<th>出版社</th>
		<th>出版年</th>
		<th>出版月</th>
		<th>出版日</th>
		<th>閲覧数</th>
	</tr>
</thead>
<tbody>
    <% @view_rank.each do |row| %>
    <tr>
        <td><a href="/browse/<%= row[1]%>/<%= row[0] %>"><%= row[2] %></a></td>
    	<td><%= row[0] %></td>
		<td><%= row[1] %></td>
		<td><%= row[2] %></td>
		<td><%= row[3] %></td>
		<td><%= row[4] %></td>
		<td><%= row[5] %></td>
		<td><%= row[6] %></td>
		<td><%= row[7] %></td>
		<td><%= row[8] %></td>
    </tr>
    <% end %>
</tbody>
</table>
